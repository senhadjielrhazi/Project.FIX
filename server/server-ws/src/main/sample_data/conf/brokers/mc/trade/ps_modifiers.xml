<?xml version="1.0" encoding="UTF-8" ?>

<!--
  - Broker configuration: pre-sending message modifiers.
  -->

<beans
 xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation=
 "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

  <bean id="mc_trade_ps_modifiers" class="org.marketcetera.ws.server.filters.MessageModifierManager">
    <!-- The message modifiers. -->
    <property name="messageModifiers">
      <list>
        <bean
         class="org.marketcetera.ws.server.filters.DefaultMessageModifier">
          <!-- Modifications to the header fields. -->
          <property name="headerFields">
            <map>
            </map>
          </property>
          <!-- Modifications to the body fields. -->
          <property name="msgFields">
            <map>
              <!--
                - Set the 'Text' (tag 58) of all application messages
                - to 'Test Text'.
                -->
              <entry key="58(app)" value="Test Text"/>
            </map>
          </property>
          <!-- Modifications to the trailer fields. -->
          <property name="trailerFields">
            <map>
            </map>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>